# Telegram
BOT_TOKEN=your_telegram_bot_token
BOT_USERNAME=your_bot_username
MINI_APP_URL=https://vas3k-books.etolstoy.com

# Database
DATABASE_URL=file:./data/bookclub.db

# External APIs
OPENAI_API_KEY=your_openai_api_key
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Google Books Rate Limiting (optional - adjust if hitting 429 errors)
GOOGLE_BOOKS_DELAY_MS=200        # Delay between requests (ms)
GOOGLE_BOOKS_MAX_RETRIES=3       # Max retries on 429 error
GOOGLE_BOOKS_BACKOFF_MS=1000     # Initial backoff time (ms) - doubles on each retry

# App Config
TARGET_CHAT_ID=-100123456789  # Group chat where bot operates
ADMIN_CHAT_ID=-100987654321    # Admin chat for error notifications (optional)
ADMIN_USER_IDS=123456789,987654321  # Admin user IDs (comma-separated) - can edit/delete any review

# Cron
DIGEST_CRON_SECRET=your_digest_cron_secret  # Auth for /api/digest/trigger endpoint

# Server
PORT=3001
NODE_ENV=development

# Domain (for Caddy)
DOMAIN=yourdomain.com
