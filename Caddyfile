{$DOMAIN:localhost} {
    # API routes go to bot service
    handle /api/* {
        reverse_proxy bot:3001
    }

    # All other routes go to mini-app
    handle {
        reverse_proxy mini-app:80
    }

    # Enable gzip compression
    encode gzip

    # Logging
    log {
        output stdout
        format console
    }
}
